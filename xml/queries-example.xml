<!-- an example listing of queries, containing two queries -->
<queries>
    <!-- a constant-free ternary query with two disjuncts (i.e., a union of two CRPQ's):
        (?x,?y,?z) <- (?x, (^ab+^c)*, ?y), (?y, a, ?yprime), (?yprime, ^b, ?z)
        (?x,?y,?z) <- (?x, (ab+c)*, ?y), (?y, a, ?z) 
    -->
    <query>
        <metadata>
            <multiplicity star="0.7"/>
            <arity>3</arity>
            <selectivity>linear</selectivity>
            <type>chain</type>
        </metadata>

        <head>
            <!-- we don't allow repetitions of variables here.  Furthermore,
                 note that all disjuncts share the same head, with the same
                 variable names -->
            <var>?x</var>
            <var>?y</var>
            <var>?z</var>
        </head>

        <bodies>
            <body>
                <!-- (?x, (^ab+^c)*, ?y) -->
                <!-- ^s: arc inverse of s --> 
                <conjunct src="?x" trg="?y">
                    <star>
                        <disj>
                            <concat>
                                <symbol inverse="true">0</symbol>
                                <symbol>1</symbol>
                            </concat>
                            <concat> 
                                <symbol inverse="true">2</symbol>
                            </concat>
                        </disj>
                    </star>
                </conjunct>

                <!-- (?y, a, ?yprime) -->
                <conjunct src="?y" trg="?yprime"> 
                    <disj>
                    <concat> 
                        <symbol>0</symbol>
                    </concat>
                    </disj>
                </conjunct>

                <!-- (?yprime, ^b, ?z) -->
                <conjunct src="?yprime" trg="?z">
                    <disj>
                    <concat> 
                        <symbol inverse="true">1</symbol>
                    </concat>
                    </disj>
                </conjunct>
            </body>


            <body>
                <!-- (?x, (ab+c)*, ?y) -->
                <conjunct src="?x" trg="?y">
                    <star>
                        <disj>
                            <concat>
                                <symbol>0</symbol>
                                <symbol>1</symbol>
                            </concat>
                            <concat> 
                                <symbol>2</symbol>
                            </concat>
                        </disj>
                    </star>
                </conjunct>

                <!-- (?y, a, ?z) -->
                <conjunct src="?y" trg="?z">
                    <disj>
                    <concat> 
                        <symbol>0</symbol>
                    </concat>
                    </disj>
                </conjunct>
            </body>
        </bodies>
    </query>

    <!-- a boolean query with one disjunct (i.e., a union of one CRPQ), having a constant value 1234: 
         () <- (1234, a, ?y)
    -->
    <query>
        <metadata>
            <multiplicity star="0"/>
            <arity>0</arity>
            <selectivity>constant</selectivity>
            <type>star</type>
        </metadata>

        <head> </head>

        <bodies>
            <body>
                <conjunct src="1234" trg="?y">
                    <disj>
                        <concat> 
                            <symbol>0</symbol>
                        </concat> 
                    </disj>
                </conjunct>
            </body>
        </bodies>
    </query>


</queries>
