<queries>    
    <query>
        <metadata>
            <multiplicity star="0.0"/>
            <arity>2</arity>
            <selectivity>linear</selectivity>
            <type>chain</type>
        </metadata>

        <head>
            <var>?x</var>
            <var>?y</var>
        </head>

        <bodies>
            <body>
				<!-- Linear type query that select pairs (User / Purchases) -->
                <conjunct src="?x" trg="?y">
                    <disj>
                        <concat>
                            <symbol>78</symbol> <!-- MakePurchase -->
                        </concat>
                    </disj>
                </conjunct>
            </body>
        </bodies>
    </query>
</queries>
