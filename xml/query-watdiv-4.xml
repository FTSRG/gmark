<queries>    
    <query>
        <metadata>
            <multiplicity star="0.0"/>
            <arity>2</arity>
            <selectivity>quadratic</selectivity>
            <type>chain</type>
        </metadata>

        <head>
            <var>?x</var>
            <var>?y</var>
        </head>

        <bodies>
            <body>
				<!-- Quadratic type query that select pairs (Concert / Concert) of concert that are performed in the same city -->
                <conjunct src="?x" trg="?yprime">
                    <disj>
                        <concat>
                            <symbol>66</symbol> <!-- PerformedIn -->
                        </concat>
                    </disj>
                </conjunct>
                <conjunct src="?yprime" trg="?y">
                    <disj>
                        <concat>
                            <symbol inverse="true">66</symbol>  <!-- PerformedIn -->
                        </concat>
                    </disj>
                </conjunct>
            </body>
        </bodies>
    </query>
</queries>
